
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2016/11/29/15/05/drink-1870139_1280.jpg);">
  <div class="container">
    <h1 class="text-center">Immense Cocktails!</h1>
  </div>
</div>

 <h1 class="text-center">Take your pick</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
      <% if !cocktail.photo.nil? %>
        <div class="card-product" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dvzul9adr/image/upload/v1574396174/vkrk3rrbscb1p0vzplw0.jpg)">
          <div class="card-product-infos">
            <h2> <%= cocktail.name %></h2>
          </div>
        </div>
      <% else %>
       <div class="card-product" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>)">
          <div class="card-product-infos">
            <h2> <%= cocktail.name %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "Create New", new_cocktail_path %>


